<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        app:bl_corners_radius="16dp"
        app:bl_solid_color="@color/white">
        <View style="@style/line_style" />
        <TextView
            android:id="@+id/popup_slide_from_bottom_ios_2_btn1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="举报"
            android:textColor="@color/p_color_blue"
            android:textSize="20sp" />

        <View style="@style/line_style" />

        <TextView
            android:id="@+id/popup_slide_from_bottom_ios_2_btn2"

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/p_color_blue"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/popup_slide_from_bottom_ios_2_cencel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/p_color_blue"
        android:textSize="20sp"
        app:bl_corners_radius="16dp"
        app:bl_solid_color="@color/white" />
</LinearLayout>
