<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_layout_msg"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:background="@drawable/alert_dialog_shape_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="end|bottom"
                android:text="您共有"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/conmon_dialog_msg_txt1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoLink="all"
                android:gravity="bottom"
                android:text="1条"
                android:textColor="@color/bisque" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start|bottom"
                android:text="未读信息"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="end|center_vertical"
                android:text="其中，待审核"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/conmon_dialog_msg_txt2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:autoLink="all"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:text="1条"
                android:textColor="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="end|top"
                android:text="驳回待处理"
                android:textColor="@color/black" />


            <TextView

                android:id="@+id/conmon_dialog_msg_txt3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="start|top"
                android:paddingLeft="10dp"
                android:text="1条"
                android:textColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#bababa" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <!--<TextView-->

        <!--android:id="@+id/dialog_negative"-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="?selectableItemBackground"-->
        <!--android:clickable="true"-->
        <!--android:focusable="true"-->
        <!--android:gravity="center"-->
        <!--android:text="取消"-->
        <!--android:textColor="#000"-->
        <!--app:corners_radius="5dp"-->
        <!--app:solid_color="#fff"-->
        <!--app:stroke_color="#bcbcbc"-->
        <!--app:stroke_width="0.5dp"-->
        <!--tools:ignore="MissingPrefix" />-->

        <TextView


            android:id="@+id/dialog_positive_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="关闭"
            android:textColor="#000"
          />
    </LinearLayout>
</LinearLayout>