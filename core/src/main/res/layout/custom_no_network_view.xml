<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_network_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/no_network_retry_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_arrow"
        />

    <TextView
        style="@style/MultipleStatusView.Content"
        android:id="@+id/no_network_view_tv"
        android:layout_below="@id/no_network_retry_view"
        android:text= "ic_arrow"/>
</RelativeLayout>