<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".moudle.activity.MapActivity">

    <include
        layout="@layout/include_actionbar_back"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/p_color_blue"
        >

        <de.hdodenhof.circleimageview.CircleImageView

            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/activity_map_headimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_home_man" />


        <TextView
            android:id="@+id/activity_map_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/activity_map_headimg"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/activity_map_matter_application"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_matter_application" />

        <ImageView
            android:visibility="gone"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/activity_map_search_icon"
            android:layout_width="25dp"
            android:clickable="true"

            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_home_search_icon" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/activity_map_name"
            android:background="@null"
            android:drawableRight="@mipmap/ic_home_search_icon"
            android:gravity="center_vertical"
            android:hint="按时间搜索记录"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:bl_corners_radius="12dp"
            app:bl_solid_color="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>
</LinearLayout>