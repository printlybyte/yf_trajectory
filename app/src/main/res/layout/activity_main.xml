<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".moudle.activity.MainActivity">

    <include layout="@layout/include_actionbar_back" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/activity_main_display_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/activity_main_install_apk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安装apk" />

            <Button
                android:id="@+id/activity_main_uninstall_apk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卸载apk" />

            <Button
                android:id="@+id/activity_main_wifi_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="启用wifi" />

            <Button
                android:id="@+id/activity_main_wifi_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="禁用wifi" />

            <Button
                android:id="@+id/activity_main_wifi_is_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测wifi功能" />

            <Button
                android:id="@+id/activity_main_open_uninstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启禁止卸载" />

            <Button
                android:id="@+id/activity_main_close_uninstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭禁止卸载" />


            <Button
                android:id="@+id/activity_main_location_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许定位服务设置" />

            <Button
                android:id="@+id/activity_main_location_disabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="禁止定位服务设置" />

            <Button
                android:id="@+id/activity_main_query_datebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看数据库" />


            <Button
                android:id="@+id/activity_main_close_update_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭系统更新" />

            <Button
                android:id="@+id/activity_main_close_factory_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭禁止恢复出厂设置" />

            <Button
                android:id="@+id/activity_main_start_app_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启应用搜索" />


            <Button
                android:id="@+id/activity_main_start_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启应用通知" />

            <Button
                android:id="@+id/activity_main_exit_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出登录" />



            <Button
                android:id="@+id/activity_main_remove_position_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移除激活" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>