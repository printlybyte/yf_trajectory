<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="20dp"
    android:elevation="3dp"
    app:cardCornerRadius="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/expand_request_recding_child_query"
            android:orientation="vertical">


            <TextView
                android:id="@+id/expand_request_recding_child_start_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="sssss"
                android:textColor="@color/c_999" />

            <TextView
                android:id="@+id/expand_request_recding_child_end_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="sssss"
                android:textColor="@color/c_999" />

            <TextView
                android:id="@+id/expand_request_recding_child_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="sssss"
                android:textColor="@color/c_999" />

            <TextView
                android:id="@+id/expand_request_recding_child_reson"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="sssss"
                android:textColor="@color/c_999" />
        </LinearLayout>


        <TextView
            android:id="@+id/expand_request_recding_child_query"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"

            android:text="查看轨迹"
            app:bl_corners_radius="10dp"
            app:bl_solid_color="@color/white"
            app:bl_stroke_color="@color/p_color_blue"
            app:bl_stroke_width="1dp" />
    </RelativeLayout>
    <!--<View style="@style/line_style" />-->
</android.support.v7.widget.CardView>