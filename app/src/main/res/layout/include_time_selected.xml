<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_matter_application_start_time"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="点击选择开始时间"
            android:textColor="@color/c_999"
            android:textSize="10sp"
            app:bl_corners_radius="12dp"
            app:bl_solid_color="#f2f2f2" />

        <TextView
            android:id="@+id/activity_matter_application_end_time"
            android:layout_width="0dp"
            android:layout_height="25dp"

            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="点击选择结束时间"
            android:textColor="@color/c_999"
            android:textSize="10sp"

            app:bl_corners_radius="12dp"
            app:bl_solid_color="#f2f2f2" />


        <TextView
            android:id="@+id/activity_matter_application_confirm"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="搜索"
            android:textColor="@color/c_999"
            android:textSize="10sp"
            app:bl_corners_radius="10dp"
            app:bl_solid_color="@color/white"
            app:bl_stroke_color="@color/p_color_blue"
            app:bl_stroke_width="1dp" />
    </LinearLayout>


</LinearLayout>