<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout

        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/ri_leaveing_list_item_matter"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="申请原因：事假"
                android:textColor="#464646"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ri_leaveing_list_item_statusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:text=""
                android:textColor="#2fc02a"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/ri_leaveing_list_item_start_time"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="开始时间：2019年6月27日8：30"
            android:textColor="#b2b2b2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ri_leaveing_list_item_end_time"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="开始时间：2019年6月27日8：30"
            android:textColor="#b2b2b2"
            android:textSize="13sp" />
        <View style="@style/line_style"></View>
    </LinearLayout>

    <TextView
        android:padding="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_leave_list_chanel_bga"
        android:gravity="left"
        android:text="点击取消"
        android:id="@+id/ri_leaveing_list_item_btn"
        android:textColor="#ffffff"
        android:textSize="13sp" />


</RelativeLayout>